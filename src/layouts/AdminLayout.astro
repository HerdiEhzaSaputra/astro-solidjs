---
export interface Props {
	title: string;
}

const { title } = Astro.props;

import '@unocss/reset/tailwind.css'

import Navbar from '../components/Admin/Nav/Navbar.astro';
import Sidebar from '../components/Admin/Sidebar/Sidebar.astro';
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<script src="https://unpkg.com/flowbite@1.5.3/dist/flowbite.js"></script>
	</head>
	<body>

		<div class="flex h-screen overflow-hidden">

			<Sidebar />
	
			<div class="relative w-full flex flex-col flex-1 overflow-x-hidden">
	
				<Navbar />
	
				<main class="overflow-y-auto">
					<slot />
				</main>
			</div>
		</div>

		<script is:inline>
			function openUserMenu() {
				var userMenuContent = document.getElementById("userMenuContent");
			
				userMenuContent.classList.toggle('hidden')
			}
			function openSidebar() {
				var sidebarContent = document.getElementById("sidebar");
			
				sidebarContent.classList.toggle('hidden')
			}
		</script>

	</body>
</html>